<Window x:Class="GenerationTicketsWPF.Pages.ChangePassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GenerationTicketsWPF.Pages"
        mc:Ignorable="d"
        Title="ChangePassword" Height="300" Width="200" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="75*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Смена пароля" TextAlignment="Center" Grid.Row="0"/>
        <PasswordBox x:Name="Pass"  Grid.Row="1" Margin="30,10"/>
        <PasswordBox x:Name="TryPass" Grid.Row="2" Margin="30,10"/>
        <Button x:Name="ChangePass" Content="Изменить" Grid.Row="3" Margin="30,10" Click="ChangePass_Click"/>
    </Grid>
</Window>
